<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shaw.mapper.BlogMapper">

    <resultMap type="Blog" id="BlogResult">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="summary" column="summary"/>
        <result property="releaseDate" column="releaseDate"/>
        <result property="clickHit" column="clickHit"/>
        <result property="content" column="content"/>
        <result property="keyWord" column="keyWord"/>
        <association property="blogType" column="typeId" select="com.shaw.mapper.BlogTypeMapper.findById"></association>
    </resultMap>

    <sql id="Base_Column_List">
		id,title, summary, releaseDate, clickHit, content, typeId,
		keyWord
	</sql>
    <sql id="Simple_Base_Column_List">
		id,title,releaseDate, typeId
	</sql>

    <select id="countList" resultMap="BlogResult">
		SELECT DATE_FORMAT(releaseDate,'%Y年%m月') AS releaseDateStr ,COUNT(1) AS blogCount  FROM blog GROUP BY DATE_FORMAT(releaseDate,'%Y年%m月') ORDER BY DATE_FORMAT(releaseDate,'%Y年%m月') DESC;
	</select>

    <select id="list" parameterType="Map" resultMap="BlogResult">
        select
        <include refid="Base_Column_List"/>
        from blog
        <where>
            <if test="title!=null and title!='' ">
                and title like #{title}
            </if>
            <if test="typeId!=null and typeId!='' ">
                and typeId = #{typeId}
            </if>
            <if test="releaseDateStr!=null and releaseDateStr!='' ">
                and DATE_FORMAT(releaseDate,'%Y年%m月') = #{releaseDateStr}
            </if>
        </where>
        order by releaseDate desc
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="listSimple" parameterType="Map" resultMap="BlogResult">
        select
        <include refid="Simple_Base_Column_List"/>
        from blog
        <where>
            <if test="title!=null and title!='' ">
                and title like #{title}
            </if>
            <if test="typeId!=null and typeId!='' ">
                and typeId = #{typeId}
            </if>
            <if test="releaseDateStr!=null and releaseDateStr!='' ">
                and DATE_FORMAT(releaseDate,'%Y年%m月') = #{releaseDateStr}
            </if>
        </where>
        order by releaseDate desc
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="getTotal" parameterType="Map" resultType="Long">
        select count(1) from blog
        <where>
            <if test="title!=null and title!='' ">
                and title like #{title}
            </if>
            <if test="typeId!=null and typeId!='' ">
                and typeId = #{typeId}
            </if>
            <if test="releaseDateStr!=null and releaseDateStr!='' ">
                and DATE_FORMAT(releaseDate,'%Y年%m月') = #{releaseDateStr}
            </if>
        </where>
    </select>

    <select id="findById" parameterType="Integer" resultMap="BlogResult">
        select
        <include refid="Base_Column_List"/>
        from blog where id=#{id}
    </select>

    <update id="update" parameterType="Blog">
        update blog
        <set>
            <if test="title!=null and title!='' ">
                title=#{title},
            </if>
            <if test="summary!=null and summary!='' ">
                summary=#{summary},
            </if>
            <if test="content!=null and content!='' ">
                content=#{content},
            </if>
            <if test="blogType.id!=null ">
                typeId=#{blogType.id},
            </if>
            <if test="clickHit!=null ">
                clickHit=#{clickHit},
            </if>
            <if test="keyWord!=null and keyWord!='' ">
                keyWord=#{keyWord},
            </if>
        </set>
        where id=#{id}
    </update>

    <select id="getLastBlog" parameterType="Integer" resultMap="BlogResult">
		SELECT 	id,title  FROM blog WHERE id&lt;#{id} ORDER BY id DESC LIMIT 1
	</select>

    <select id="getNextBlog" parameterType="Integer" resultMap="BlogResult">
		SELECT 	id,title  FROM blog WHERE id&gt;#{id} ORDER BY id ASC LIMIT 1
	</select>


    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Blog">
		insert into blog values(null,#{title},#{summary},now(),0,#{content},#{blogType.id},#{keyWord})
	</insert>

    <delete id="delete" parameterType="Integer">
		delete from blog where id=#{id}
	</delete>

    <select id="getBlogByTypeId" parameterType="Integer" resultType="Integer">
		select count(1) from blog where typeId=#{typeId}
	</select>

    <update id="updateBatchForClickHit" parameterType="java.util.List">
        update blog set
        clickHit=
        <foreach collection="list" item="item" index="index" separator=" " open="case id" close="end">
            when #{item.id} then #{item.clickHit}
        </foreach>
        ,summary=
        <foreach collection="list" item="item" index="index" separator=" " open="case id" close="end">
            when #{item.id} then #{item.summary}
        </foreach>
        where ID in
        <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

    <update id="updateBatchForSummary" parameterType="java.util.List">
        update blog set
        summary=
        <foreach collection="list" item="item" index="index" separator=" " open="case id" close="end">
            when #{item.id} then #{item.summary}
        </foreach>
        where ID in
        <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>
</mapper>